<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:elevation="10dp"
    android:padding="8dp"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="#e8e8f9"
        android:animateLayoutChanges="true">
        <TextView
            android:padding="4dp"
            android:id="@+id/received_email_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From: Abhiram Deshpande"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:padding="4dp"
            android:id="@+id/received_email_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject: Quality of Goods Delivered"
            android:textStyle="bold"
            android:textSize="16sp" />
        <TextView
            android:padding="4dp"
            android:id="@+id/received_email_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/received_email_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aleo"
            android:padding="4dp"
            android:text="I am writing to express my disappointment regarding the quality of the goods that I received from your company. I recently purchased [Product Name] from your website, but upon opening the package, I found that the product was of extremely poor quality."
            android:textSize="12sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>